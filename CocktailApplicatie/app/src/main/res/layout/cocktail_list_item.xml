<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="12sp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cocktail_list_item_name"
            android:textSize="20sp"
            android:layout_marginVertical="2sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cocktail_list_item_category"
            android:layout_marginVertical="2sp"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cocktail_list_item_alcoholic"
            android:layout_marginVertical="2sp"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cocktail_list_item_id"
            android:layout_marginVertical="2sp"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorite_button"
        android:background="@drawable/baseline_favorite_shadow_24"
        android:layout_gravity="center|end"/>

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_margin="8sp"
        android:id="@+id/cocktail_list_item_image"
        android:layout_gravity="right"/>


</LinearLayout>